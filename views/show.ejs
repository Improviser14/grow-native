<% include ./partials/header %>

<div class="ui main text container segment">
  <header id="header" class="ui centered huge header"><%= blog.title %></header>
  <div class="ui top attached segment">
    <div class="item">
      <img class="ui centered large image" src="<%= blog.image %>" />
      <div class="meta">
        <span class="date"><%= blog.created.toDateString() %></span>
      </div>
      <div class="description">
        <p><%- blog.body %></p>
      </div>
      <% if(currentUser && currentUser.isAdmin){ %>
      <a class="ui yellow basic button" href="/index/<%= blog._id %>/edit"
        >Edit Blog Post</a
      >
      <form
        method="POST"
        id="delete"
        action="/blogs/<%= blog._id %>?_method=DELETE"
      >
        <button class="ui red basic button" type="submit">
          Delete Blog Post
        </button>
      </form>
      <% } %>
    </div>
  </div>
</div>

<% include ./partials/footer %>
